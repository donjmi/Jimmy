{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Edit Trick
{% endblock %}


{% block body %}
	<div class="container">
		<img class="card-img-top" src="/media/images/snowboarding.jpg" alt="{{ trick.name }}">
		<div class="row mt-5">
			{% for picture in trick.pictures %}
				{# <div class="card border-0 col-md-2 col-sm-12 mt-4 mb-4"> #}
				<div class="card mb-4 mr-3" style="max-width:10rem">
					<img src="{{ asset('/media/images/tricks/' ~ picture.name)|imagine_filter('trick') }}" alt="{{ trick.name }}" style=" max-width:10rem"/>
					<div class="row" style="max-width:10rem">
						<a href="{{ path('picture_edit', {id: trick.id}) }}">
							<i class="far fa-edit"></i>
						</a>
						<a href="{{ path('tricks_delete_picture', {id: picture.id})}}" data-delete data-token="{{ csrf_token('delete' ~ picture.id )}}">
							<i class="fas fa-trash"></i>
						</a>
					</div>
				</div>
			{% endfor %}
		</div>

		<div class="row mt-5 mb-4 justify-content-center">
			<button type="button" class="btn btn-outline-primary btn-sm mr-3" style="width:300px">Category:
				{{ trick.category.name }}</button>
			<button type="button" class="btn btn-outline-primary btn-sm mr-3" style="width:300px">posted :
				{{ trick.publishedAt ? trick.publishedAt|date('d-m-Y H:i:s') : '' }}</button>
			{% if trick.updatedAt %}
				<button type="button" class="btn btn-outline-primary btn-sm mr-3" style="width:300px">updatedAt:
					{{ trick.updatedAt ? trick.updatedAt|date('d-m-Y H:i:s') : '' }}</button>
			{% endif %}
		</div>

		{% block comment %}
			<div class="container">
				<section class="py-5 mb-4 justify-content-center">
					{{ form_start(form) }}
					<div class="row mb-4 justify-content-center">
						{{ form_widget(form.name) }}

					</div>
					<div class="row mb-4 justify-content-center">
						{{ form_widget(form.content) }}

					</div>
					<div class="row mb-4 justify-content-start" style="width:200px">
						{{ form_widget(form.category) }}

					</div>
					<div class="row mt-5 mb-4 justify-content-center">
						<button class="btn btn-primary btn-sm mr-3" style="width:100px" type="submit">update</button>
					</div>
					{{ form_end(form) }}
				</section>
			</div>
			{# <button</i type="button" class="btn btn-outline-primary btn-sm mr-3" style="width:300px" {{ include('trick/_delete_form.html.twig') }} </button> {% endblock %} <form method="post" action="{{ path('trick_delete', {'id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');"> <input type="hidden" name="_method" value="DELETE"> <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}"> <button class="btn btn-link delete" style="padding-top: 0px;"> <i class="fas fa-trash">></button> #}
		</form>
		<div class="row justify-content-center">
			<form method="post" action="{{ path('trick_delete', {'id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
				<input type="hidden" name="_method" value="DELETE">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
				<button class="btn btn-danger btn-sm mr-3" style="width:100px;margin-top: -250px;margin-left: -170px;">Delete</button>
			</form>
		</div>

	{% endblock %}
{% endblock %}
