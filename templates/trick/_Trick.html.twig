<div class="collapse" id="viewT">
  <div class="row mt-5 mb-1 md-12 sm-12">
    {% for trick in tricks %}
    <div class="card mr-3 mb-3 content mx-auto" style="width: 13rem">
      {% set mainImage = trick.getPictureMainImage %} {% if mainImage %}
      <img class="card-img-top" style="height: 137px" src="{{ asset('/media/images/tricks/' ~ mainImage.name) }}"
        alt="{{ trick.name }}" />
      {% else %}
      <img class="card-img-top" src="/media/images/snowboarding.jpg" alt="{{ trick.name }}" />
      {% endif %}
      <div class="card-body">
        <div class="row">
          <div class="col-8">
            <p class="card-text">
              <a href="{{ path('trick_show', { id: trick.id }) }}" class="text-decoration-none">{{ trick.name }}</a>
            </p>
          </div>
          <div class="col-4">
            <div class="row" style="vertical-align: middle">
              <a href="{{ path('trick_edit', { id: trick.id }) }}">
                <i class="fa fa-pencil fa-fw mt-1"></i>
              </a>
              <form method="post" action="{{ path('trick_delete', { id: trick.id }) }}"
                onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE" />
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}" />
                <button class="btn btn-link delete" style="padding-top: 0px">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  <div class="row mb-5 justify-content-center">
    <button type="button" class="btn btn-outline-info" id="loadMore">
      Load More
    </button>
  </div>
</div>